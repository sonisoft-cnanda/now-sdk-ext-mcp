{
  "name": "@sonisoft/now-sdk-ext-mcp",
  "version": "1.0.0-alpha.0",
  "description": "MCP server for interacting with ServiceNow instances via @sonisoft/now-sdk-ext-core",
  "keywords": [
    "servicenow",
    "mcp",
    "model-context-protocol",
    "ai",
    "automation",
    "scripts",
    "atf",
    "testing",
    "now-sdk"
  ],
  "author": "Chris Nanda",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "now-sdk-ext-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "buildts": "tsc -p ./",
    "build": "npm run clean && npm run buildts",
    "dev": "npm run build && node dist/index.js",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --forceExit --verbose=true --silent=false --testPathIgnorePatterns=\"/integration/\"",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=\"unit\" --forceExit --coverage --collectCoverage --coverageDirectory=\"./coverage\" --ci --reporters=default --reporters=jest-junit --watchAll=false",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=\"integration\" --forceExit --watchAll=false",
    "test:all": "node --experimental-vm-modules node_modules/.bin/jest --forceExit --verbose=true --silent=false",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@servicenow/sdk": "4.0.2",
    "@servicenow/sdk-cli": "4.0.2",
    "@servicenow/sdk-cli-core": "3.0.2",
    "@servicenow/sdk-core": "4.0.2",
    "@sonisoft/now-sdk-ext-core": "2.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.3.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
